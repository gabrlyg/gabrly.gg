---
import Card from './Card.astro';
import type { ResinInWishlist } from './type';

interface Props {
  title: string;
  resins: ResinInWishlist[];
}

const { title, resins } = Astro.props;
---

<main class="flex w-full flex-grow items-center flex-col p-4">
  <div class="max-w-2xl flex flex-col items-center gap-4">
    <h2 class="text-lg px-4 pt-6 pb-2">Resin {title}</h2>
    <ul class="grid grid-cols-2 sm:grid-cols-3 md:grid-cols-4 gap-4">
      {
        resins.map((resin) => {
          return <Card {...resin} />;
        })
      }
    </ul>
    <p class="mt-10 text-sm italic">
      This page is backed by Notion, if it's broken, then either Notion is down,
      or I'm faffing with the DB structure. <span class="not-italic">ðŸ––</span>
    </p>
  </div>
</main>
