---
import { ViewTransitions } from 'astro:transitions';
import Footer from '../components/Footer/Footer.astro';
import Header from '../components/Header/Header.tsx';
import Glorp from '../components/Glorp.tsx';
interface Props {
  title: string;
  isHomePage?: boolean;
}

const { title, isHomePage } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="gabrlyg's playground" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/assets/favicon.svg" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Lato:ital,wght@0,100;0,300;0,400;0,700;0,900;1,100;1,300;1,400;1,700;1,900&family=Noto+Sans:ital,wght@0,100..900;1,100..900&display=swap"
      rel="stylesheet"
    />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    <ViewTransitions />
  </head>
  <body
    class="flex flex-col min-h-screen items-center font-lato text-sm text-slate-900 bg-slate-100"
  >
    <Header client:load isHomePage={isHomePage} />
    <slot />
    <Glorp client:load />
    <Footer />
  </body>
</html>
